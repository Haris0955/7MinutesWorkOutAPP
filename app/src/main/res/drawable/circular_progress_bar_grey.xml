<?xml version="1.0" encoding="utf-8"?>

<!--    inner radius (the distance from the center to the inner edge)
   thickness (the width of the ring)
   'useLevel' attribute in drawable shapes enables level-based control, allowing dynamic
   adjustments of drawable appearance using the 'level' property, typically for progress bars
   and custom visualizations.
   -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape
        android:innerRadiusRatio="2.7"
        android:shape="ring"
        android:thicknessRatio="50.0"
        android:useLevel="false">

        <solid android:color="#D4DEE7" />
    </shape>
</item>
</layer-list>
